<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="900dp"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".FirstFragment">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="256dp"
        android:layout_height="187dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/images"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.531"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="190dp"
        android:lines="05"
        android:text="We at ABC Company comprehend the importance of a new pair of sneakers.\nWe combined our love of sneaker culture with science to create a natural cleaning solution that works"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"





        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.314"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.736" />


</androidx.constraintlayout.widget.ConstraintLayout>
